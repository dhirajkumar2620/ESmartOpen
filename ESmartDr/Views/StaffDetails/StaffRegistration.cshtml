    <section class="forms">
        @using (Html.BeginForm("ManageStaffDetails", "StaffDetails", FormMethod.Post, new { @id = "frmStaffDetails" }))
        {
            @Html.HiddenFor(m => m.ReceptionId);
            <div class="container-fluid">
                <div class="row">
                    <!-- Basic Form-->
                    <div class="col-lg-12">
                        <div class="card">
