                            <div class="card-body">
                                <p>Need to fill mandatory fields.</p>
                                <form>
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label class="form-control-label">
                                                    Name<span class="star">*</span>
                                                </label>
                                                @Html.TextBoxFor(m => m.Name, new { @id = "txtName", @class = "form-control", required = "required", @placeholder = "Staff Name" })
                                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })


                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label class="form-control-label">
                                                    Degree<span class="star">*</span>
                                                </label>
                                                @Html.TextBoxFor(m => m.Education, new { @id = "txtDegree", @class = "form-control", required = "required", @placeholder = "Degree" })
                                                @Html.ValidationMessageFor(model => model.Education, "", new { @class = "text-danger" })


                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label class="form-control-label">
                                                    Gender<span class="star">*</span>
                                                </label>
                                                @Html.DropDownListFor(m => m.Gender, new List<SelectListItem>
                                                     {
                                                        
                                                         new SelectListItem{ Text="Male", Value = "Male" },
                                                         new SelectListItem{ Text="Female", Value = "Female" },
                                                          new SelectListItem{ Text="Other", Value = "Other" },
                                                      }, new { @class = "form-control mb-3", @id = "ddlGender" })
                                            </div>
                                        </div>

                                    </div>
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label class="form-control-label">Department<span class="star">*</span></label>
                                                @Html.TextBoxFor(m => m.Department, new { @id = "txtDepartment", @class = "form-control", required = "required", @placeholder = "Department" })
                                                @Html.ValidationMessageFor(model => model.Department, "", new { @class = "text-danger" })


                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label class="form-control-label">Designation<span class="star">*</span></label>
                                                @Html.TextBoxFor(m => m.Designation, new { @id = "txtDesignation", @class = "form-control", required = "required", @placeholder = "Designation" })
                                                @Html.ValidationMessageFor(model => model.Designation, "", new { @class = "text-danger" })


                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label class="form-control-label">
                                                    Whats App No.<span class="star">*</span>
                                                </label>
                                                @Html.TextBoxFor(m => m.WhatsAppNumber, new { @id = "txtWhatsAppNumber", @type = "number", @class = "form-control", required = "required", @placeholder = "Whats App No." })
                                                @Html.ValidationMessageFor(model => model.WhatsAppNumber, "", new { @class = "text-danger" })


                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label class="form-control-label">
                                                    Other No.
                                                </label>
                                                @Html.TextBoxFor(m => m.OtherNumber, new { @id = "txtName", @type = "number", @class = "form-control", @placeholder = "Other No." })
                                                @Html.ValidationMessageFor(model => model.OtherNumber, "", new { @class = "text-danger" })


                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label class="form-control-label">
                                                    Email ID<span class="star">*</span>
                                                </label>
                                                @Html.TextBoxFor(m => m.EmailId, new { @id = "txtEmailId", @class = "form-control", required = "required", @placeholder = "Email ID" })
                                                @Html.ValidationMessageFor(model => model.EmailId, "", new { @class = "text-danger" })


                                            </div>
                                        </div>

                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label class="form-control-label">
                                                    Adress<span class="star">*</span>
                                                </label>
                                                @Html.TextBoxFor(m => m.Address, new { @id = "txtAdress", @class = "form-control", required = "required", @placeholder = "Adress" })
                                                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })


                                            </div>
                                        </div>

                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label class="form-control-label">
                                                    Active
                                                </label>
                                                @Html.DropDownListFor(m => m.RoleId, new List<SelectListItem>
                                                     {
                                                         new SelectListItem{ Text="Active", Value = "1" },
                                                         new SelectListItem{ Text="De-Active", Value = "0" },

                                                      }, new { @class = "form-control mb-4", @id = "ddlStatus" })

                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label class="form-control-label">
                                                    Remark
                                                </label>
                                                @Html.TextBoxFor(m => m.Remark, new { @id = "txtRemark", @class = "form-control",  @placeholder = "Remark" })
                                                @Html.ValidationMessageFor(model => model.Remark, "", new { @class = "text-danger" })


                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12 text-right">
                                            <a href="~/Home/Apoinment"><input type="button" value="Back" onclick="validateData()" class="btn btn_1 btn-primary"></a>
                                            <input type="submit" value="Save" class="btn btn_2 btn-primary b33">
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </section>
