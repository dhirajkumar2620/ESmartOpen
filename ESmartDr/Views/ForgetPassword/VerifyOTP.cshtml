@model App_Layer.AdminDetails
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Verify OTP</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="robots" content="all,follow">
    <link rel="icon" href="~/img/favicon.png" type="" sizes="16x16">
    <!-- Bootstrap CSS-->
    <link rel="stylesheet" href="~/vendor/bootstrap/css/bootstrap.min.css">
    <!-- Font Awesome CSS-->
    <link rel="stylesheet" href="~/vendor/font-awesome/css/font-awesome.min.css">
    <!-- Fontastic Custom icon font-->
    <link rel="stylesheet" href="~/css/fontastic.css">
    <!-- Google fonts - Poppins -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:300,400,700">
    <!-- theme stylesheet-->
    <link rel="stylesheet" href="~/css/style.default.css" id="theme-stylesheet">
    <!-- Custom stylesheet - for your changes-->
    <link rel="stylesheet" href="~/css/custom.css">
    <!-- Favicon-->
    <link rel="shortcut icon" href="~/img/favicon.ico">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.21/css/dataTables.bootstrap4.min.css" />
    <!-- Tweaks for older IEs-->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script><![endif]-->

</head>

        <body class="fp-pg" style="background: #d4d4d4;">
            <div>
                <h1>Verify OTP</h1><br>
                
                    <div class="row fp-box">
                        <div class="forgot-password-page">
                            <div class="col-md-12 col-xs-12 col-sm-12 content-log">
                                @using (Html.BeginForm("VerifyOTP", "ForgetPassword", FormMethod.Post, new { @id = "frmForgetpasswordDetails" }))
                                {
                                    <div class="login-data login-pg">

                                        <div class="form social-icons">
                                            <!-- <ul class="list-inline">
                            <li class="list-inline-item">
                                <button type="button" class="form-control"><img src="img/Google_Logo.png" class="img-responsive">&nbsp;Google</button>
                            </li>
                            <li class="list-inline-item">
                                <button type="button" class="form-control"><img src="img/F_icon.png" class="img-responsive">&nbsp;Facebook</button>
                            </li>
                        </ul>
                        <br> -->
                                            <div class="login-btn ">
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <label style="color:#fff;">OTP<span class="star">*</span></label>
                                                        @Html.TextBoxFor(m => m.WhatsAppNumber, new { @id = "txtOTP",@class = "form-control", @maxlength = "6" ,required = "required", @placeholder = "eg. 123456" })
                                                        <br>

                                                        @if (TempData["noticeOTP"] != null)
                                                        {
                                                            <p style="color:red">@TempData["noticeOTP"]</p>
                                                        }
                                                        <br>

                                                        <br>
                                                    </div>
                                                </div>

                                                <div class="text-center sn-in">
                                                    <input type="submit" value="Submit" class="btn btn-primary">

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }

                            </div>
                        </div>
                </div>
                

            </div>
            <script src="~/vendor/jquery/jquery.min.js"></script>
            <script src="~/vendor/popper.js/umd/popper.min.js"> </script>
            <script src="~/vendor/bootstrap/js/bootstrap.min.js"></script>
            <script src="~/vendor/jquery.cookie/jquery.cookie.js"> </script>
            <script src="~/vendor/chart.js/Chart.min.js"></script>
            <script src="~/vendor/jquery-validation/jquery.validate.min.js"></script>
            <!-- Main File-->
            <script src="~/js/front.js"></script>
            <script>
        var SendOTP = function () {
            $.ajax({
                url: "/ForgetPassword/SendOTP",
                type: "podt",
                success: function (data) {
                    if (data == "success") {
                        alert("OPT send Successfully");
                        window.location = "/ForgetPassword/EnterOTP";
                    }
                    else {
                        alert("failed");
                    }
                }
            })
        }

                $("#txtOTP").val(""); 
            </script>
        </body>
</html>
