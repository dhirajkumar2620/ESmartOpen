@model App_Layer.AdminDetails
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ChangePassword</title>
</head>
<body>
    <div>
        <div class="col-md-4 col-xs-12 col-sm-12 content-log">
            @using (Html.BeginForm("ChangePassword", "ForgetPassword", FormMethod.Post, new { @id = "frmForgetpasswordDetails" }))
            {
                <div class="login-data login-pg">
                    <h1>Change Password</h1><br>
                    <div class="form social-icons">
                        
                      
                        <br> 
                        <div class="login-btn ">
                            <label>Password<span class="star">*</span></label>
                            @Html.TextBoxFor(m => m.Passwod1, new { @id = "txtOTP", @class = "form-control", required = "required", @placeholder = "Password" })
                            <br>


                            <br>
                            <div class="form-group pass_show"  id="divOTP" runat="server">
                                <label>Confirm Password<span class="star">*</span></label>
                                @Html.TextBoxFor(m => m.Passwod1, new { @id = "txtPasswod1", type = "password", @class = "form-control", required = "required", @placeholder = "Confirm Password" })
                            </div>
                            <br>
                            <div class="text-center sn-in">
                                <input type="submit" value="Submit" class="btn btn-primary">

                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>

    </div>
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/popper.js/umd/popper.min.js"> </script>
    <script src="~/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/vendor/jquery.cookie/jquery.cookie.js"> </script>
    <script src="~/vendor/chart.js/Chart.min.js"></script>
    <script src="~/vendor/jquery-validation/jquery.validate.min.js"></script>
    <!-- Main File-->
    <script src="~/js/front.js"></script>
    <script>
        var SendOTP = function () {
            $.ajax({
                url: "/ForgetPassword/SendOTP",
                type: "podt",
                success: function (data) {
                    if (data == "success") {
                        alert("OPT send Successfully");
                        window.location = "/ForgetPassword/EnterOTP";
                    }
                    else {
                        alert("failed");
                    }
                }
            })
        }
    </script>
</body>

</html>
