                            <button type="button" id="btnCommon" class="btn btn-link collapsed" data-toggle="collapse" data-request-url="@Url.Action("CommonPrec", "MyOPD")" data-target="#collapseSix"><i class="fa fa-plus"></i> <span class="accor-heading">Common</span></button>
                        </h2>
                    </div>
                    <div id="collapseSix" class="collapse" aria-labelledby="headingFour" data-parent="#accordionExample1">
                        <div id="tabCommon"></div>
                    </div>
                </div>

            </div>
      
