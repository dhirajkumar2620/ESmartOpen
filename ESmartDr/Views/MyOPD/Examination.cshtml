                            <thead>
                                <tr>
                                    <th>Complaints</th>
                                    <th>Since-When</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.olist)
                                {
                                <tr>
                                    <td>@item.Complaints</td>
                                    <td>@item.Since - @item.Period</td>
                                </tr>
                                }
                            </tbody>

                        </table>
                    }
                    @if (@Session["Test"].ToString() == "Yes")
                    {
                        <table id="example8" class="table table-striped tbl-view-2" style="width:100%;">
                            <thead>
                                <tr>
                                    <th>Test</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model.clist)
                                {
                                    <tr>
                                        <td>@item.InvSelectTests</td>
                                    </tr>
                                }
                        </table>
                    }
                    @if (@Session["Diagnosis"].ToString() == "Yes")
                    {
                        <table id="example9" class="table table-striped tbl-view-3" style="width:100%;">
                            <thead>
                                <tr>
                                    <th>Diagnosis</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.olist)
                                {
                                    <tr>
                                        <td>@item.Diagnosis</td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    }
                    @if (@Session["Medication"].ToString() == "Yes")
                    {
                        <table id="example5" class="table table-striped tbl-view-4" style="width:100%;">
                            <thead>
                                <tr>
                                    <th>Medicine</th>
                                    <th>Dose</th>
                                    <th>Instruction</th>
                                    <th>Freq</th>
                                    <th>Alternate</th>

                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model.mlist)
                                {
                                <tr>
                                    <td>@item.MedicineName</td>
                                    <td>@item.WhenMedicine</td>
                                    <td>@item.SpecialInstruction</td>
                                    <td>@item.ForMedicine - @item.MedicineDays</td>
                                    <td>@item.AlternateMedicine</td>
                                </tr>
                                }

                            </tbody>

                        </table>
                    }
                    @if (@Session["Observation"].ToString() == "Yes")
                    {
                        <table id="example6" class="table table-striped tbl-view-5" style="width: 100%;">
                            <thead>
                                <tr>
                                    <th>Advice</th>
                                    <th>Diet & Exercise</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model.clist)
                                {
                                    <tr>
                                        <td>@item.AddAdvice</td>
                                        <td>@item.AddDiet</td>
                                    </tr>
                                }

                            </tbody>

                        </table>
                    }
                    @if (@Session["NextVisit"].ToString() == "Yes")
                    {
                        <table id="example7" class="table table-striped tbl-view-6" style="width:100%;">

                            <thead>
                                <tr>
                                    <th>Next Visite</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model.NextList)
                                {
                                    <tr>
                                        <td>@item.CreatedDate</td>
                                    </tr>
                                }

                            </tbody>

                        </table>
                    }
                </div>

            </div>
