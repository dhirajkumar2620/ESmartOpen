                                        <td>@item.BloodPressure</td>
                                        <td>@item.Temperature</td>
                                        <td>@item.BloodGlucosePostPrandial</td>
                                        <td>@item.Weight</td>
                                        <td>@item.BloodGlucoseFasting</td>
