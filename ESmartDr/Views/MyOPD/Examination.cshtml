                        <tr>
                            <th>Medicine</th>
                            <th>Dose</th>
                            <th>Instruction</th>
                            <th>SpecialInstruction</th>
                            <th>Freq</th>
                            <th>Alternate</th>

                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.mlist)
                        {
                            <tr>
                                <td>@item.MedicineName</td>
                                <td>@item.WhenMedicine</td>
                                <td>@item.SpecialInstruction</td>
                                <td>@item.ForMedicine - @item.MedicineDays</td>
                                <td>@item.AlternateMedicine</td>
                            </tr>
