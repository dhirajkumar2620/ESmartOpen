    function Save(x) {
        var item = new Array();
        var customers = new Array();
        $("#tblCustomers TBODY TR").each(function () {
            var row = $(this);
            var customer = {};
            customer.ServiceName = row.find("TD").eq(0).html();
            customer.Bill = row.find("TD").eq(1).html();
            customer.Paid = row.find("TD").eq(2).html();
