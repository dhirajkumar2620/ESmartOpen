@model App_Layer.Settings

@{
    ViewBag.Title = "Setting";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<header class="page-header">
    <div class="container-fluid">
        <h2 class="no-margin-bottom">Setting</h2>
    </div>
</header>

<section class="forms">
    @using (Html.BeginForm("ManageSettings", "MedicineDetails", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {

        <div class="container-fluid">
            <div class="row">
                <!-- Basic Form-->
                <div class="col-lg-12">
                    <div class="card">
                        <!-- <div class="card-close">
                          <div class="dropdown">
                            <button type="button" id="closeCard1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="dropdown-toggle"><i class="fa fa-ellipsis-v"></i></button>
                            <div aria-labelledby="closeCard1" class="dropdown-menu dropdown-menu-right has-shadow"><a href="#" class="dropdown-item remove"> <i class="fa fa-times"></i>Close</a><a href="#" class="dropdown-item edit"> <i class="fa fa-gear"></i>Edit</a></div>
                          </div>
                        </div> -->
                        <!-- <div class="card-header d-flex align-items-center">
                          <h3 class="h4">Basic Form</h3>
                        </div> -->

                        <div class="card-body">
                            <p>Need to fill mandatory fields.</p>

                            <br />
                            <form>
                                <div class="row">

                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="form-control-label">Language<span class="star">*</span></label>
                                            @Html.DropDownListFor(m => m.Language, new List<SelectListItem>
                                                     {
                                                         new SelectListItem{ Text="English", Value = "English" },
                                                          new SelectListItem{ Text="Marathi", Value = "Marathi" },

                                                      }, new { @class = "form-control mb-3", @id = "ddlLanguage" })




                                        </div>
                                    </div>
                                    <div class="col-md-4" style="display:none">
                                        <div class="form-group">
                                            <label class="form-control-label">UserId<span class="star">*</span></label>
                                            @Html.TextBoxFor(m => m.UserId, new { @id = "txtName", @class = "form-control" })




                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="form-control-label">Vital Information<span class="star">*</span></label>
                                            @Html.DropDownListFor(m => m.VitalInformation, new List<SelectListItem>
                                                     {
                                                         new SelectListItem{ Text="Yes", Value = "Yes" },
                                                          new SelectListItem{ Text="No", Value = "No" },

                                                      }, new { @class = "form-control mb-3", @id = "ddlVitalInformation" })

                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="form-control-label">Complaints<span class="star">*</span></label>
                                            @Html.DropDownListFor(m => m.Complaints, new List<SelectListItem>
                                                     {
                                                         new SelectListItem{ Text="Yes", Value = "Yes" },
                                                          new SelectListItem{ Text="No", Value = "No" },

                                                      }, new { @class = "form-control mb-3", @id = "ddlComplaints" })

                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="form-control-label">Test<span class="star">*</span></label>
                                            @Html.DropDownListFor(m => m.Test, new List<SelectListItem>
                                                     {
                                                         new SelectListItem{ Text="Yes", Value = "Yes" },
                                                          new SelectListItem{ Text="No", Value = "No" },

                                                      }, new { @class = "form-control mb-3", @id = "ddlTest" })

                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="form-control-label">Diagnosis<span class="star">*</span></label>
                                            @Html.DropDownListFor(m => m.Diagnosis, new List<SelectListItem>
                                                     {
                                                         new SelectListItem{ Text="Yes", Value = "Yes" },
                                                          new SelectListItem{ Text="No", Value = "No" },

                                                      }, new { @class = "form-control mb-3", @id = "ddlDiagnosis" })

                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="form-control-label">Medication<span class="star">*</span></label>
                                            @Html.DropDownListFor(m => m.Medication, new List<SelectListItem>
                                                     {
                                                         new SelectListItem{ Text="Yes", Value = "Yes" },
                                                          new SelectListItem{ Text="No", Value = "No" },

                                                      }, new { @class = "form-control mb-3", @id = "ddlMedication" })


                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="form-control-label">Observation<span class="star">*</span></label>
                                            @Html.DropDownListFor(m => m.Observation, new List<SelectListItem>
                                                     {
                                                         new SelectListItem{ Text="Yes", Value = "Yes" },
                                                          new SelectListItem{ Text="No", Value = "No" },

                                                      }, new { @class = "form-control mb-3", @id = "ddlObservation" })


                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="form-control-label">NextVisit<span class="star">*</span></label>
                                            @Html.DropDownListFor(m => m.NextVisit, new List<SelectListItem>
                                                     {
                                                         new SelectListItem{ Text="Yes", Value = "Yes" },
                                                          new SelectListItem{ Text="No", Value = "No" },

                                                      }, new { @class = "form-control mb-3", @id = "ddlNextVisit" })

                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="form-control-label">Printer<span class="star">*</span></label>
                                            @Html.DropDownListFor(m => m.Printer, new List<SelectListItem>
                                                     {
                                                         new SelectListItem{ Text="A4", Value = "A4" },
                                                          new SelectListItem{ Text="A5", Value = "A5" },

                                                      }, new { @class = "form-control mb-3", @id = "ddlPrinter" })

                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label class="form-control-label">Template<span class="star">*</span></label>
                                                @Html.DropDownListFor(m => m.Template, new List<SelectListItem>
                                                     {
                                                          new SelectListItem{ Text="Yes", Value = "Yes" },
                                                          new SelectListItem{ Text="No", Value = "No" },

                                                      }, new { @class = "form-control mb-3", @id = "dddlTemplate" })


                                            </div>
                                        </div>

                                </div>
                                <div class="row">
                                    <div class="col-md-12 text-right">
                                        <a href="~/PatientDetails/GetQueueList"><input type="button" value="Back" class="btn btn_1 btn-primary"></a>
                                        <input type="submit" value="Save" id="btnSubmit" class="btn btn_2 b33 btn-primary">

                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</section>

