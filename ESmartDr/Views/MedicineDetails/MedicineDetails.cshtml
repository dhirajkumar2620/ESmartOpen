    <!-- Forms Section-->

    @using (Html.BeginForm("ManageMedicineDetails", "MedicineDetails", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.HiddenFor(m => m.MedicineId);
        @Html.HiddenFor(m => m.HospitalId);
