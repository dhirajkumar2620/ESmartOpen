    ViewBag.Title = "MedicineDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div>
    <!-- Page Header-->
    <header class="page-header">
        <div class="container-fluid">
            <h2 class="no-margin-bottom">Add Medicine</h2>
        </div>
    </header>
    <!-- Breadcrumb-->
