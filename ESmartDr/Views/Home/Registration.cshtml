
@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div >
    <!-- Page Header-->
    <header class="page-header">
        <div class="container-fluid">
            <h2 class="no-margin-bottom">Registration</h2>
        </div>
    </header>
   
    <section class="forms">
        <div class="container-fluid">
            <div class="row">
                <!-- Basic Form-->
                <div class="col-lg-12">
                    <div class="card">
                        <!-- <div class="card-close">
                          <div class="dropdown">
                            <button type="button" id="closeCard1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="dropdown-toggle"><i class="fa fa-ellipsis-v"></i></button>
                            <div aria-labelledby="closeCard1" class="dropdown-menu dropdown-menu-right has-shadow"><a href="#" class="dropdown-item remove"> <i class="fa fa-times"></i>Close</a><a href="#" class="dropdown-item edit"> <i class="fa fa-gear"></i>Edit</a></div>
                          </div>
                        </div> -->
                        <!-- <div class="card-header d-flex align-items-center">
                          <h3 class="h4">Basic Form</h3>
                        </div> -->
                        <div class="card-body">
                            <p>Need to fill mandatory fields.</p>
                            <form>
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="form-control-label">
                                                Name<span class="star">*</span>
                                            </label>
                                            <input type="text" placeholder="Name" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="form-control-label">
                                                Degree<span class="star">*</span>
                                            </label>
                                            <select name="account" class="form-control mb-3">
                                                <option>Select Degree</option>
                                                <option>1</option>
                                                <option>2</option>
                                                <option>3</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="form-control-label">Registration No.</label>
                                            <input type="number" placeholder="Registration No." class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="form-control-label">
                                                Gender<span class="star">*</span>
                                            </label>
                                            <select name="account" class="form-control mb-3">
                                                <option>Select Gender</option>
                                                <option>Male</option>
                                                <option>Female</option>
                                                <option>Other</option>
                                            </select>
                                        </div>
                                    </div>

                                </div>
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="form-control-label">
                                                Date of Birth<span class="star">*</span>
                                            </label>
                                            <input type="Date" placeholder=""
                                                   class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="form-control-label">
                                                Whats App No.<span class="star">*</span>
                                            </label>
                                            <input type="number" placeholder="Whats App No."
                                                   class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="form-control-label">
                                                Other No.<span class="star">*</span>
                                            </label>
                                            <input type="number" placeholder="Other No."
                                                   class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="form-control-label">
                                                Email ID<span class="star">*</span>
                                            </label>
                                            <input type="text" placeholder="Email ID" class="form-control">
                                        </div>
                                    </div>

                                </div>
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="form-control-label">Hospital/Clinic/Diagnostic/<br />Lab Name</label>
                                            <input type="text" placeholder="Hospital/Clinic/Diagnostic/Lab Name"
                                                   class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="form-control-label">Hospital/Clinic/Diagnostic/<br />Lab No.</label>
                                            <input type="text" placeholder="Hospital/Clinic/Diagnostic/Lab No."
                                                   class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="form-control-label">Hospital/Clinic/Diagnostic/ <br />Lab Add.</label>
                                            <input type="text" placeholder="Hospital/Clinic/Diagnostic/Lab Add."
                                                   class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="form-control-label">Activation <br />For</label>
                                            <input type="text" placeholder="Activation For"
                                                   class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="form-control-label">Activation Date</label>
                                            <input type="Date" placeholder=""
                                                   class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="form-control-label">Activation Period</label>
                                            <input type="text" placeholder=""
                                                   class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12 text-right">
                                        <input type="submit" value="Back" class="btn btn_1 btn-primary">
                                        <input type="submit" value="Save" class="btn btn_2 btn-primary">
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Page Footer-->
    
</div>

